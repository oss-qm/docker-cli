#!/usr/bin/make -f
export DH_VERBOSE = 1

export GOVERSION=1.14
export GO=/usr/lib/go-$(GOVERSION)/bin/go

%:
	dh $@ -- GO=$(GO)

override_dh_auto_build:
	dh_auto_build -- GO=$(GO) -f Makefile.standalone

override_dh_auto_install:
	dh_auto_install -- GO=$(GO) -f Makefile.standalone

override_dh_auto_test:
	: # do nothing

# Use "make prefix=/usr" (override prefix=/usr/local in Makefile)
#override_dh_auto_install:
#	dh_auto_install -- prefix=/usr

# Do not install python .pyc .pyo if they exist
#override_dh_install:
#	dh_install --list-missing -X.pyc -X.pyo
